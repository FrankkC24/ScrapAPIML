{
  "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "noEmitOnError": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "sourceMap": true,
      "inlineSources": true,
  },
  "include": [
    "./src/**/*",
  ]
}